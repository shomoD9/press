{
  "name": "press",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "node --import tsx --test tests/publish-v1/*.test.ts",
    "start": "node dist/index.js",
    "install:wiring": "node --import tsx scripts/install-wiring.ts",
    "excalidraw:check": "node --import tsx scripts/excalidraw-mcp-bridge.ts --check",
    "bootstrap": "bash scripts/bootstrap.sh",
    "update": "bash scripts/update.sh",
    "doctor": "bash scripts/doctor.sh",
    "release:tag": "bash scripts/release-tag.sh"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
